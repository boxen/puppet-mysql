[client]
default-character-set=<%= scope.lookupvar "mysql::config::charset" %>
port=<%= scope.lookupvar "mysql::config::port" %>
socket=<%= scope.lookupvar "mysql::config::socket" %>

[server]
port=<%= scope.lookupvar "mysql::config::port" %>
log-error=<%= scope.lookupvar "mysql::config::logerror" %>
general_log_file=<%= scope.lookupvar "mysql::config::loggeneral" %>
datadir=<%= scope.lookupvar "mysql::config::datadir" %>
socket=<%= scope.lookupvar "mysql::config::socket" %>
default-storage-engine=<%= scope.lookupvar "mysql::config::engine" %>
max_allowed_packet=1073741824
sql-mode="NO_ENGINE_SUBSTITUTION"
character-set-client-handshake=FALSE
character-set-server=<%= scope.lookupvar "mysql::config::charset" %>
collation-server=<%= scope.lookupvar "mysql::config::collation" %>
init-connect='SET collation_connection=<%= scope.lookupvar "mysql::config::collation" %>'
init-connect='SET NAMES <%= scope.lookupvar "mysql::config::charset" %> COLLATE <%= scope.lookupvar "mysql::config::collation" %>'
lower_case_table_names=<%= scope.lookupvar "mysql::config::casing" %>
max_sp_recursion_depth=3
<% if (scope.lookupvar "mysql::config::engine") == 'innodb' %>
innodb_buffer_pool_size=50Mb
innodb_file_per_table
innodb_file_format = Barracuda
innodb_large_prefix
<% end %>

[mysqldump]
default-character-set=<%= scope.lookupvar "mysql::config::charset" %>
